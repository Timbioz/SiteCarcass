@using MvcContrib.UI.Grid
@model WebSite.Models.SectionsIndexViewModel

@(Html.Grid(Model.Sections).Attributes(@class => "table table-striped table-bordered table-condensed").Columns(col =>
                    {
                        col.Custom(@<text><input type="checkbox" name="select" value="@item.SectionId"/></text>);
                        col.For(cust => Html.ActionLink(cust.Name, "Create", new{id=cust.SectionId}));
                        col.For(p => p.Description).HeaderAttributes(style=>"background-color: black");
                    }))