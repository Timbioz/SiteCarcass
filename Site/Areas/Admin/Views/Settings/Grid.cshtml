@using MvcContrib.Pagination
@using MvcContrib.UI.Grid
@using MvcContrib.UI.Pager
@model IEnumerable<WebSite.Models.Settings>
@{
    ViewBag.Title = "Grid";
    Layout = "~/Areas/Admin/Views/Shared/_DashboardLayout.cshtml";
}
<div class="span9">
    @Html.Grid(Model).Columns(column =>
{
    column.For(c => c.SettingId).Sortable(true);
    column.For(cust => Html.ActionLink("View Details", "Show", new { id = cust.SettingId })).Named("View Details").DoNotEncode();
    column.For(c => c.Name);
    column.For(c => c.Value);
}).Attributes(@class => "table table-striped table-bordered table-condensed").Sort((GridSortOptions)ViewData["sort"])

@Html.Pager((IPagination)Model).First("dw")

@Html.TextArea("ckeditor")

    <script type="text/javascript">
        CKEDITOR.replace("ckeditor");
    </script>

</div>
