@model IEnumerable<WebSite.Models.SectionViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_DashboardLayout.cshtml";
}

<div class="span9">

        @(Html.Telerik().Grid(Model)
        .Name("SectionsGrid")
        .Columns(columns =>
        {
            columns.Bound(o => o.Name);
            columns.Bound(o => o.Description);
        })
        .Pageable()
        .Sortable())

</div>
